@model ASP_PS3.Models.ViewModel.User.UserVM

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Users[0].Identifier)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Users[0].FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Users[0].LastName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Users[0].Age)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Users) {
    <tr class="@if (item.Age < 18) {<text>alert</text>}">
        <td>
            @Html.DisplayFor(modelItem => item.Identifier)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Identifier }) |
            @Html.ActionLink("Details", "Details", new { id = item.Identifier }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Identifier })
        </td>
    </tr>
}

</table>
